@{
    @model Movie;
}
<h1 class="text-center my-4">Delete</h1>
<h3 class="text-center mb-4">Are you sure you want to delete the entry for @Model.Director's @Model.Title?</h3>

<form method="post">
    <div class="d-flex justify-content-center">
        @*This hidden input passes the MovieID to the controller, which allows it to identify the correct record.*@
        <input type="hidden" asp-for="MovieID" />
        <a asp-controller="Home" asp-action="Movies" class="btn btn-primary mx-2">Cancel</a>
        <input type="submit" name="submit" value="Delete" class="btn btn-secondary mx-2">
    </div>
</form>